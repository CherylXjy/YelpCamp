<% include partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds page</h1>
            <p>View our hand-picked campground from all over the world</p>
            <p>
                <a class="btn btn-large btn-primary" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex;flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=<%=camp["image"]%>> 
                    <div class="caption">
                        <h4> <%= camp["name"] %></h4>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include partials/footer %>